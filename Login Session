    private void RegisterMouseClicked(java.awt.event.MouseEvent evt) {                                      
        AddUserForm adf = new AddUserForm();
        adf.setVisible(true);
        adf.pack();
        adf.setLocationRelativeTo(null);
        adf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.dispose();
    }                                     

